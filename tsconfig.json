{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["./src/@types/", "./node_modules/@types/"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["./node_modules", "./dist"]
}
